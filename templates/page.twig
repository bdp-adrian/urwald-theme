{% extends "base.twig" %}

{% block content %}
	<article class="{{post.post_type}}" id="post-{{post.ID}}">
        <section class="{{post.post_type}}__header rellax">
            {% set image = post.meta_featured_image %}
            {% include "partial/image_fit.twig" with { 'masked': true } %}
        </section>
        <section class="{{post.post_type}}__content">
            {% include "layouts/layouts.twig" %}
        </section>
    </article>
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script src="{{ site.theme.link }}/dist/page.min.js"></script>
{% endblock %}