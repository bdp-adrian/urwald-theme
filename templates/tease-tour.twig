{% set tour  = TimberPost(tour) %}
{% set meta  = tour.get_field("meta") %}
{% set infos = tour.get_field("tour_meta") %}
<div class="tour card">
    <a class="card__header" href="{{ tour.link }}">
        <div class="card__image">
            {% include "partial/image_fit.twig" with { image: meta.featured_image, img_type: "thumbnail" } %}
        </div>
        <h4 class="card__title">{{ meta.title }}</h4>
    </a>
    <div class="card__body">
        <div class="card__infos container">
            <div class="row">
                <div class="card__info col-12"><strong>Schwierigkeit: </strong>{{ infos.difficulty }}</div>
                <div class="card__info col-6"><i class="fas fa-arrows-alt-h"></i>{{ infos.length }} km</div>
                <div class="card__info col-6"><i class="fas fa-angle-up"></i>{{ infos.high_point }} m</div>
                <div class="card__info col-6"></i><i class="far fa-clock"></i>{{ infos.time }} h</div>
                <div class="card__info col-6"><i class="fas fa-angle-down"></i>{{ infos.low_point }} m</div>
            </div>
        </div>
    </div>
</div>