<head>
	{% block meta %}
		{% include 'partial/meta.twig' %}
	{% endblock %}
	{% block styles %}
		<link rel="stylesheet" href="{{ site.theme.link }}/dist/style.css" type="text/css" media="screen" />
	{% endblock %}
	{% block head %}
    	{{function('wp_head')}}
	{% endblock %}
</head>

	<body class="{{body_class}}" data-template="base.twig">
		<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>

		{% include 'header.twig' %}

		<button id="map-cta" class="btn btn--map" data-toggle="modal" data-target="#mapModal">Karte</button>

		<section id="content" role="main" class="content">
			{% block content %}
				Sorry, no content
			{% endblock %}
			<aside class="sidebar">
				{{sidebar}}
			</aside>
		</section>

		{% include 'partial/map-modal.twig' %}
		
		{% block footer %}
			{% include 'footer.twig' %}

			{{ function('wp_footer') }}
		{% endblock %}

		{% block scripts %}
		    <script src="{{ site.theme.link }}/dist/index.min.js"></script>
		{% endblock %}
	</body>
</html>
