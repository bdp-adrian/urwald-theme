<!doctype html>
<!--[if lt IE 7]><html class="no-js no-svg ie ie6 lt-ie9 lt-ie8 lt-ie7" {{ site.language_attributes }}> <![endif]-->
<!--[if IE 7]><html class="no-js no-svg ie ie7 lt-ie9 lt-ie8" {{ site.language_attributes }}> <![endif]-->
<!--[if IE 8]><html class="no-js no-svg ie ie8 lt-ie9" {{ site.language_attributes }}> <![endif]-->
<!--[if gt IE 8]><!--><html class="no-js no-svg" {{ site.language_attributes }}> <!--<![endif]-->
<head>
	{% block meta %}
		{% include 'partial/meta.twig' %}
	{% endblock %}
	{% block styles %}
		<link rel="stylesheet" href="{{ site.theme.link }}/dist/style.css" type="text/css" media="screen" />
	{% endblock %}
	{% block head %}
    	{{function('wp_head')}}
	{% endblock %}
</head>

	<body class="{{body_class}}" data-template="base.twig">
		<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
		<header class="header">
			{% block header %}
				<h1 class="header__logo" role="banner">
					<a class="hdr-logo-link" href="{{site.url}}" rel="home">{{ msg }}</a>
				</h1>
				<nav id="nav-main" class="nav-main" role="navigation">
					{% include "menu.twig" with {'menu': menu.get_items} %}
				</nav><!-- #nav -->
			{% endblock %}
		</header>

		<section id="content" role="main" class="content">
			{% block content %}
				Sorry, no content
			{% endblock %}
			<aside class="sidebar">
				{{sidebar}}
			</aside>
		</section>

		{% block footer %}
			{% include 'footer.twig' %}

			{{ function('wp_footer') }}
		{% endblock %}

		{% block scripts %}
		    <script src="{{ site.theme.link }}/dist/index.min.js"></script>
		{% endblock %}
	</body>
</html>
