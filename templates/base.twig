	<body class="{{body_class}}" data-template="base.twig">
		<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
		<div class="bread-crumbs">
			{% if post.type == "page" %}
				{% if post.parent %}{{ post.parent }} <span class="bread-crumbs__hyphen"></span> {% endif %}{{ post.title }}
			{% elseif post.type == "urwald_article" %}
				Wald &amp; Wissen <span class="bread-crumbs__hyphen"></span> {{ post.title }}
			{% elseif post.type == "post" %}
				Aktuelles <span class="bread-crumbs__hyphen"></span> {{ post.title }}
			{% endif %}
		</div>

		{% include 'header.twig' %}
		{% include 'partial/share_content.twig' %}
		{% set map_url = TimberPost(options.map_link).link %}
		<a href="{{ map_url }}" class="btn btn--map"><i class="far fa-map"></i></a>

		<section id="content" role="main" class="content">
			{% block content %}
				Sorry, no content
			{% endblock %}
			<aside class="sidebar">
				{{sidebar}}
			</aside>
		</section>
		
		{% block footer %}
			{% include 'footer.twig' %}

			{{ function('wp_footer') }}
		{% endblock %}

		{% block scripts %}
			<script type="text/javascript">
				deferscript("{{ site.theme.link }}/dist/index.min.js", 'index', 800);
			</script>
		{% endblock %}
	</body>
