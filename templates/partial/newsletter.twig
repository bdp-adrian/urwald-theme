<div class="newsletter">

    <form method="POST" class="newsletter__form" action="">

        <h3 class="newsletter__title">
            {{ footer.newsletter }}
        </h3>

        <div class="newsletter__text">
            {{ footer.newsletter_text }}
        </div>
        {% if result is not empty %}
            <section id="newsletter-result" class="newsletter__result">
                <div class="container">
                    <div class="row">
                        <div class="col-10 col-md-8 offset-md-1">
                            {% if result == "ok" %}
                                <div><strong>Vielen Dank.</strong> Sie haben sich für den Newsletter registriert.</div>
                            {% elseif result == "duplicate" %}
                                <div>Sie haben sich bereits für den Newsletter registriert.</div>
                            {% else %}
                                <div>Bei der Anmeldung ist ein Fehler aufgetreten. Bitte versuchen Sie es später erneut.</div>
                            {% endif %}
                        </div>
                        <div class="col-2">
                            <div id="newsletter-close" class="hamburger active">
                                <div class="hamburger__box">
                                    <div class="hamburger__inner"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        {% endif %}
        <div class="row">
            <div class="col-10 col-lg-6">
                <div class="post-filter__select-wrapper">
                    <select name="salutation" class="newsletter__select">
                        <option value="">Anrede</option>
                        <option value="Frau">Frau</option>
                        <option value="Herr">Herr</option>
                    </select>
                </div>
            </div>
            <div class="col-lg-6"></div>
            <div class="col-10 col-lg-6">
                <input type="text" name="firstname" class="newsletter__input" placeholder="Vorname" required></input>
            </div>
            <div class="col-10 col-lg-6">
                <input type="text" name="lastname" class="newsletter__input" placeholder="Nachname" required></input>
            </div>
            <div class="col-10 col-lg-8">
                <input type="email" value="" name="email" class="newsletter__input" placeholder="adresse@email.com" required></input>
            </div>
            <div class="col-12 col-lg-4">
                <input type="submit" value="Anmelden" name="submit_btn" class="newsletter__submit btn">
            </div>
        </div>
    </form>
    

</div>